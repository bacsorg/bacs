<% c++ #include <bacs/archive/web/content/form.hpp> %>
<% skin plain %>
    <% view status uses bacs::archive::web::content::status extends base_form %>
        <% template subtitle() %>
            <% gt "Problems status" %>
        <% end template %>
        <% template form() %>
            <h3><% gt "Get problems status" %></h3>
            <form method="post" action="">
                <% form as_p form %>
            </form>
        <% end template %>
        <% template result() %>
            <% if result %>
                <% using status_map_result with *result as result_view %>
                    <% include render() from result_view %>
                <% end using %>
            <% end %>
        <% end template %>
    <% end view %>
<% end skin %>
